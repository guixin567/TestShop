
.category{
  height: 100%;
}
.category_container{
  height: calc(100vh - 90rpx);
  display: flex;
  flex-direction: row;
}
.left_menu{
  width:26%;
}
.menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: var(--font-color);
}
.menu_item_active{
  color: var(--themeColor);
}
.right_content{
  width: 74%;
  height: 100%;
}
.right_content_title{
  display: flex;
  justify-content: center;
  margin-bottom: 10rpx;
  margin-top: 10;
  font-size: 30;
  font-weight: 400;
  color: var(--font-color);
}
.right_content_container{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}

.right_content_item{
  width: 33.33%;
  padding: 10rpx;
}
.right_content_item_name{
  display: flex;
  justify-content: center;
  font-size: 25rpx;
  color: var(--font-color);
}

