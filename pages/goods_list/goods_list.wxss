.goods_container {
  display: flex;
  flex-direction: row;
  border-bottom: var(--border-color) solid 1rpx;
}

.goods_container_left {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16rpx;
}

.goods_container_right {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-right: 16rpx;
}

.goods_container_right_name {
  color: var(--font-color);
  font-size: var(--font-size);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods_container_right_price {
  color: var(--theme-color);
}